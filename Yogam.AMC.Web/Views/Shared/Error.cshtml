@model HandleErrorInfo

@{
    ViewBag.Title = "Error";
}
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <p class="error-404">Oops...</p>
            <p class="lead">Sorry, it looks like something went wrong.<br /> Try checking the URL for errors, then hit the refresh button on your browser.</p>
            <p>Here are helpful links to help you find what your way:</p>

            <ul>
                <li>
                    @Html.ActionLink("Home", "Index", "Home")
                </li>
                <li>
                    @Html.ActionLink("About", "About", "Home")
                </li>
                <li>
                    @Html.ActionLink("Contact Us", "Contact", "Home")
                </li>
                <li>
                    @Html.ActionLink("Login", "Login", "Account")
                </li>
                <li>
                    @Html.ActionLink("Register", "Register", "Account")
                </li>
            </ul>
            
            <div class="panel-group" id="accordion">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                Click to view error detail
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse">
                        <div class="panel-body">
                            <p><strong>Controller:</strong> @Model.ControllerName</p>
                            <p><strong>View:</strong> @Model.ActionName</p>
                            <p><strong>Message:</strong> @Model.Exception.Message</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

