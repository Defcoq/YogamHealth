@model Yogam.AMC.Web.Models.CategoryViewModel[]

@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="page-header">
        <h1>Categories <small>Add, edit and delete product categories</small></h1>
    </div>

    <ol class="breadcrumb">
        <li>@Html.ActionLink("Home","Index","Home")</li>
        <li>@Html.ActionLink("Manage", "Index", "Manage")</li>
        <li class="active">Categories</li>
    </ol>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.CategoryName, "Edit", new { id = item.CategoryID })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <a href="@Url.Action("Create","Categories")" class="btn btn-sm btn-primary" role="button">Create New</a>
    </p>
</div>