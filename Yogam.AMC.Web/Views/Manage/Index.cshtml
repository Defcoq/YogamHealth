@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    
    <div class="row">
        <div class="page-header">
            <h1>Manage <small>Manage all entity types for Northwind</small></h1>
        </div>

        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="active">Manage</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/categories.jpg")" alt="Categories">
                <div class="caption">
                    <h3>Categories</h3>
                    <p>All products are divided into specific categories to make searching and ordering easier.</p>
                    <p><a href="@Url.Action("Index","Categories")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create","Categories")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/products.jpg")" alt="Products">
                <div class="caption">
                    <h3>Products</h3>
                    <p>A wide range of products from around the globe are available in out store.</p>
                    <p><a href="@Url.Action("Index","Products")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create","Products")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/employees.jpg")" alt="Employees">
                <div class="caption">
                    <h3>Employees</h3>
                    <p>We have a highly skilled and motivated staff that are ready to assist however they can</p>
                    <p><a href="@Url.Action("Index","Employees")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create","Employees")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/regions.jpg")" alt="Regions">
                <div class="caption">
                    <h3>Regions</h3>
                    <p>East, West, South, North - We serve our customers everywhere</p>
                    <p><a href="@Url.Action("Index","Regions")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create","Regions")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/shippers.jpg")" alt="Shipper">
                <div class="caption">
                    <h3>Shippers</h3>
                    <p>We ship to every corner of the globe. Set up the correct shipper here.</p>
                    <p><a href="@Url.Action("Index","Shippers")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create","Shippers")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content("~/images/suppliers.jpg")" alt="Suppliers">
                <div class="caption">
                    <h3>Suppliers</h3>
                    <p>Only the best for our customers. Suppliers from around the world, supply only the best.</p>
                    <p><a href="@Url.Action("Index","Suppliers")" class="btn btn-primary" role="button">View All</a> <a href="@Url.Action("Create", "Suppliers")" class="btn btn-default" role="button">Create New</a></p>
                </div>
            </div>
        </div>
    </div>

</div>
